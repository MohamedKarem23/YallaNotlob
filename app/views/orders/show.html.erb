<p id="notice"><%= notice %></p>
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 push-md-2 col-lg-8 push-lg-2">
            <div class="card card-default">
                <div class="card-header center">
                    <h4><%= "Order for #{@order.order_type} by " %><%= link_to "#{@order.user.name}","/friends/#{@order.user.id}/show", class: "text-primary"%></h4>
                </div>
                <div class="card-block">
                    <%= image_tag @order.menu_img.url,class: "img-fluid" %>
                </div>
            </div>
        </div>
        <div class="col-sm-10 push-sm-1" style="margin-top:10px;">
            <div class="card card-default">
                <div class="card-header center">
                    <h4>Order details</h4>
                </div>
                <div class="card-block", style="max-height:300px;overflow-y: scroll;">
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>Name</th>
                            <th>Item</th>
                            <th>Amout</th>
                            <th>Price</th>
                            <th>Comment</th>
                            <th>Action</th>
                        </tr>
                        <% @order.order_details.each do |order_detail| %>
                        <tr>
                            <td><%= order_detail.user.name %></td>
                            <td><%= order_detail.item %></td>
                            <td><%= order_detail.amount %></td>
                            <td><%= order_detail.price %></td>
                            <td><%= order_detail.comment %></td>
                            <td><%= link_to('Edit', edit_order_detail_path(order_detail), class: "text-primary") if order_detail.user.id==current_user.id %>
                                <%= link_to('Delete', order_detail, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-danger")if order_detail.user.id==current_user.id %></td>

                        </tr>
                        <% end %>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-10 push-sm-1" style="margin-top:10px;">
            <div class="card card-default">
                <div class="card-header center">
                    <h4>Add a detail:</h4>
                </div>
                <div class="card-block">

                    <%= form_for([@order.order_details.build]) do |f| %>
                    <%= f.hidden_field :user_id, value:current_user.id %>
                    <%= f.hidden_field  :order_id %>
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>
                                <%= f.label :item %></th>
                            <th>
                                <%= f.label :amount %></th>
                            <th>
                                <%= f.label :price %></th>
                            <th>
                                <%= f.label :comment %></th>
                        </tr>
                        <tr>
                            <td><%= f.text_field :item %></td>
                            <td><%= f.number_field :amount %></td>
                            <td><%= f.text_field :price %></td>
                            <td><%= f.text_area :comment %></td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                <%= f.submit value:"Add to order", class: "btn btn-success" %></td>
                        </tr>
                    </table>

                    <% end %>

                </div>
            </div>
        </div>
    </div>
</div>
