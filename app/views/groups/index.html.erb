<p id="notice"><%= notice %></p>
<div>
    <%= form_for([current_user.groups.build]) do |f| %>
    <%= f.hidden_field :user_id, value:current_user.id %>
    <table style="margin:0 auto;">
        <tr>
            <td>
                <h4>New Group:</h4>
            </td>
            <td><%= f.text_field :name, placeholder:'Enter group name' %></td>
            <td>
                <%= f.submit class: "btn btn-success", value:'Add' %></td>
        </tr>
    </table>

    <% end %>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <div class="card card-default">
                <div class="card-header center">
                    <h4>My Groups</h4>
                </div>
                <div class="card-block scrollable" >
                    <table class="table table-striped table-bordered">
                        <tbody>
                            <% @groups.each do |g| %>
                                <% if g.id != nil %>
                                    <tr>
                                        <td class='g_name' style="cursor:pointer;">
                                            <label style="cursor:pointer;" val='<%="#{g.id}"%>'><%="#{g.name }"%></label>
                                        </td>
                                        <td><%= link_to 'Delete', g, method: :delete, data: { confirm: 'Are you sure?' },class: "text-danger" %></td>
                                    </tr>
                                <% end %>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="card card-default">
                <div class="card-header center">
                    <h4>Group Members</h4>
                </div>
                <div class="card-block scrollable">
                    <%= form_tag("/groups/add_member", method: :post, remote: true) do %>
                    <table style="margin:0 auto;">
                        <tr>
                            <td class="h6"><%= label_tag(:friend_email, "Add Friend to group:")%></td>
                            <td><%= hidden_field_tag :group_id%></td>
                            <td><%= text_field_tag :friend_email, nil,placeholder:'Enter friend email'%></td>
                            <td><%= submit_tag :Add, class: "btn btn-success" %></td>
                        </tr>
                    </table>
                    <% end %>

                    <div>
                      <ul id="tst" class="list-group">
                      </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

<br>

